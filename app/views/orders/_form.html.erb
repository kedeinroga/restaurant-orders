<%=form_with model: @order, local: true do |form| %>
  <div class = "form-erros">
    <% if @order.errors.any? %>
    <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div>
    <%= form.label :room %>
    <%= form.text_field :room %>
  </div>

  <div>
    <%= form.label :table %>
    <%= form.text_field :table %>
  </div>

  <div>
    <%= form.label :dish_id %>
    <%= form.collection_select :dish_id, Dish.all, :id, :name, { selected: @dish_id, include_hidden: false }, {:multiple => true} %>
  </div>

  <div>
    <%= form. submit %> 
  </div>
<% end %>