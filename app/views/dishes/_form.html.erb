<%=form_with model: @dish, local: true do |form| %>
  <div class = "form-erros">
    <% if @dish.errors.any? %>
    <ul>
      <% @dish.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>
  </div>

  <div class = "form-title form-content__margin">
    <%= form.label :name, class: 'form-content-label' %>
    <%= form.text_field :name %>
  </div>

  <div class = "form-price form-content__margin">
    <%= form.label :price, class: 'form-content-label' %>
    <%= form.number_field :price %>
  </div>

  <div class = "form-submit-button">
    <%= form. submit class: 'imput-submit' %> 
  </div>
<% end %>